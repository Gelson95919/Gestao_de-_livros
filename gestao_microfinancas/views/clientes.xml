<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="clientes_form" model="ir.ui.view">
            <field name="name">Clientes</field>
            <field name="model">clientes</field>
            <field name="arch" type="xml">
                <form string="" create="False" edit="False">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="clientes_tree" model="ir.ui.view">
            <field name="name">Clientes</field>
            <field name="model">clientes</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="id"/>
                    <field name="codigo_cliente"/>
                    <field name="nome_terc"/>
                    <field name="utilizador_id"/>
                </tree>
            </field>
        </record>
        <record id="clientes_codigo" model="ir.sequence">
            <field name="name">Clientes</field>
            <field name="code">clientes.codigo</field>
            <field name="prefix">C</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
        <record id="clientes_act_window" model="ir.actions.act_window">
            <field name="name">Clientes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clientes</field>
            <field name="view_id" ref="clientes_form"/>
            <field name="target">inline</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="clientes_menu" name="Clientes" parent="gestao_pessoas_cliente_menu" action="clientes_act_window"
                  sequence="80"/>

    </data>
</odoo>