<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <record id="plano_desembolso_form" model="ir.ui.view">
            <field name="name">Plano Desembolso</field>
            <field name="model">plano.desembolso</field>
            <field name="arch" type="xml">
                <form string="Credito Aprovado"  create="false" delete="false">
                    <sheet>
                        <div>
                            <label for="title" string="Cod" invisible="1"/><!--Controlo-->
                            <field name="codigo" invisible="1"/><!--Controlo-->
                            <label for="title" string="Valor"/>
                            <field name="valor" style="width:200px"/>
                            <label for="title" string="" style="width:250px"/>
                            <label for="title" string="Nº Prestações" style="width:150px"/>
                            <field name="numero_prestacao" style="width:200px"/>
                            <field name="identificacao_proponente" invisible="1"/><!--Controlo-->
                            <field name="solici" invisible="1"/>
                            <field name="ata" invisible="1"/>


                        </div>
                        <div>
                            <label for="title" string="Juros"/>
                            <field name="juros" style="width:100px"/>
                            <label for="title" string="%"/>
                            <field name="por" style="width:80px"/>
                            <label for="title" string="" style="width:250px"/>
                            <label for="title" string="Periodicidade" style="width:150px"/>
                            <field name="periodicidade" style="width:100px"/>
                            <field name="num_incr"  style="width:100px" invisible="1"/>
                            <label for="title" string="" style="width:5px"/>
                        </div>
                        <div>
                            <label for="title" string="Data"/>
                            <field name="data" style="width:200px"/>
                            <label for="title" string="" style="width:250px"/>
                            <label for="title" string="Data Primeira" style="width:150px"/>
                            <field name="date_start" style="width:200px"/>
                        </div>
                        <div>
                            <label for="title" string="Período Carência"/>
                            <field name="periodo_carencia" style="width:120px"/>
                            <label for="title" string="" style="width:250px"/>
                            <field name="calcular_juro_periodo_carenc"/>
                            <label for="title" string="Calcular juros no periodo de Carência" style="width:260px"/>
                        </div>
                        <div>
                            <label for="title"
                                   string="___________________________________________________________________________________________________________________________________"
                                   style="color:Blue; font-weight: bold;"/>
                        </div>
                        <div>
                            <label for="title" string="" style="width:120px"/>
                        </div>
                        <div>
                            <label for="title" string="Metoto Calculo"/>
                            <field name="metudo_calculo" style="width:150px"/>
                            <label for="title" string="" style="width:25px"/>
                            <button name="gerar" type="object" string="Gerar" icon="fa-gears"
                                    style="font-size:15px;color:blue;"/>


                        </div>

                        <div>
                             <field name="plano_financiamento_ids" style="width:960px" force_save="1" options = "{'reload_on_button': true}">
                                <tree editable="bottom" string="Plano gerado" create="false" delete="false">
                                    <field name="numer_prest" readonly="1"/>
                                    <field name="data_documento"/>
                                    <field name="prestacao" sum="Prestação" readonly="1"/>
                                    <field name="juro_jerado" sum="Juros" readonly="1"/>
                                    <field name="amortizacao" sum="Amortização" readonly="1"/>
                                    <field name="divida" readonly="1"/>
                                </tree>
                            </field>
                        </div>
                        <div>
                            <button name="imprimir" type="object" string="Imprimir" icon="fa-print" style="font-size:15px;color:blue;"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="plano_desembolso_tree" model="ir.ui.view">
            <field name="name">Plano desembolso</field>
            <field name="model">plano.desembolso</field>
            <field name="arch" type="xml">
                <tree string="Visualização de Crédito Concedido">
                    <field name="codigo"/>
                    <field name="identificacao_proponente"/>
                    <field name="valor"/>
                    <field name="numero_prestacao"/>
                </tree>
            </field>
        </record>
       <record id="plano_desem_num" model="ir.sequence">
            <field name="name">Cred aprov Num</field>
            <field name="code">desel.codigo</field>
            <field name="prefix"></field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
        <record id="plano_desem_cod" model="ir.sequence">
            <field name="name">Cod Plan Desembol</field>
            <field name="code">desel.codigo.plan</field>
            <field name="prefix"></field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
       <record id="desembolso_act_window" model="ir.actions.act_window">
            <field name="name">Plano Desembolso</field>
            <field name="type">ir.actions.act_window</field>
            <!--<field name="view_id" ref="plano_desembolso_form"/>
            <field name="target">inline</field>-->
            <field name="res_model">plano.desembolso</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
       </record>
        <!-- sub-menu Credito concedido-->
        <!--<menuitem id="plano_des_menu" name="PLANO DESEMBOLSO" parent="gestao_credito_menu"
                  action="desembolso_act_window" sequence="80"/>-->

    </data>
</odoo>